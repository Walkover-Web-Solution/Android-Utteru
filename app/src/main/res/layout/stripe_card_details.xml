<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/violet"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/padding_bottom_em"
        android:paddingLeft="@dimen/padding_left_em"
        android:paddingRight="@dimen/padding_right_em"
        android:paddingTop="@dimen/padding_right_em">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/auto_detect_country_back"
            android:src="@drawable/back"
            android:layout_height="wrap_content" />

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/auto_detect_coutry_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/auto_detect_country_back"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="Recharge Now"
            android:textColor="@android:color/white"
            android:textSize="@dimen/abc_text_size_large_material" />

        <ImageView
            android:id="@+id/auto_detect_country_home"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/new_margin"
            android:layout_alignParentRight="true"
            android:background="@drawable/menu" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="vertical"
        android:padding="@dimen/padding">
        <include
            layout="@layout/error_message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/amount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/new_black"
            android:text="@string/recharge_amount"
            android:textSize="@dimen/textsize_em" />

        <EditText
            android:id="@+id/card_number"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/edit_box_height"
            android:layout_marginTop="@dimen/margin_top"

            android:background="@drawable/ed_border_background"
          android:digits="0123456789"
           android:hint="@string/cardNumber"

            android:inputType="number|phone"
            android:maxLength="19"
            android:maxLines="1"

            android:nextFocusDown="@+id/exp_month"
            android:nextFocusForward="@+id/exp_month"
            android:nextFocusRight="@+id/exp_month"
            android:padding="@dimen/padding_left_em"
            android:textColor="@color/new_black"
            android:textSize="@dimen/edit_text_size" />

        <LinearLayout
            android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_top"
                android:layout_weight="2"
                android:background="@drawable/ed_border_background">

                <EditText
                    android:id="@+id/exp_month"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/edit_box_height"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:hint="@string/exp_mm"
                    android:inputType="number|phone"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/exp_year"
                    android:nextFocusForward="@+id/exp_year"
                    android:nextFocusRight="@+id/exp_year"
                    android:padding="@dimen/padding_left_em"
                    android:textColor="@color/new_black"
                    android:textSize="@dimen/edit_text_size" />
                <com.Utteru.commonUtilities.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="@dimen/textsize_em"/>
                <EditText
                    android:id="@+id/exp_year"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/edit_box_height"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:hint="@string/exp_yy"
                    android:inputType="number|phone"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/cvc"
                    android:nextFocusForward="@+id/cvc"
                    android:nextFocusRight="@+id/cvc"
                    android:padding="@dimen/padding_left_em"
                    android:textColor="@color/new_black"
                    android:textSize="@dimen/edit_text_size" />
                </LinearLayout>

            <EditText

                android:id="@+id/cvc"

                android:layout_width="fill_parent"
                android:layout_height="@dimen/edit_box_height"
                android:layout_weight="8"
                android:background="@drawable/ed_border_background"
                android:digits="0123456789"
               android:gravity="center"
                android:hint="@string/cvc"
                 android:inputType="number|phone"
                android:maxLength="3"
                android:maxLines="1"
                android:nextFocusForward="@+id/save"
                android:padding="@dimen/padding_left_em"
             android:textColor="@color/new_black"
            android:textSize="@dimen/edit_text_size"/>

        </LinearLayout>

        <Button android:id="@+id/save"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/new_btn_size"
            android:layout_marginTop="@dimen/new_margin"
            android:background="@drawable/violet_button_selector_shape"

     android:text="@string/proceed_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size"/>
    </LinearLayout>
</LinearLayout>