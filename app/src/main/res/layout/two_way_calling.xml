<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/tw_root"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/new_margin">

                <include
                    layout="@layout/error_message_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/abc_action_bar_default_height_material"
                    android:layout_marginTop="@dimen/margin_top"
                    android:background="@drawable/twc_edittext_boder"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/tw_source_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toLeftOf="@+id/tw_source_con_button"
                        android:layout_toStartOf="@+id/tw_source_con_button"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:digits="0987654321+"
                        android:hint="@string/source_number_text"
                        android:inputType="number|phone"
                        android:maxLength="18"
                        android:maxLines="1"
                        android:paddingTop="@dimen/padding_top_em"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/light_black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/textsize_em" />

                    <Button
                        android:id="@+id/tw_source_con_button"
                        android:layout_width="@dimen/tw_con_button_width"
                        android:layout_height="@dimen/tw_con_button_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/contact_tw" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tw_source_status_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top"
                    android:background="@drawable/ed_border_background"
                    android:padding="@dimen/two_way_padding"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/tw_source_status_image"
                        android:layout_width="@dimen/tw_state_image_height"
                        android:layout_height="@dimen/tw_state_image_height"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/tw_status_connecting" />

                    <TextView
                        android:id="@+id/tw_source_num_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_top"
                        android:layout_toRightOf="@id/tw_source_status_image"
                        android:text="connecting"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tw_source_time_elapsed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_top"
                        android:layout_toRightOf="@id/tw_source_num_status"
                        android:text="connecting"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/abc_action_bar_default_height_material"
                    android:layout_marginTop="@dimen/margin_top"
                    android:background="@drawable/twc_edittext_boder"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/tw_destination_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toLeftOf="@+id/tw_destination_con_button"
                        android:layout_toStartOf="@+id/tw_destination_con_button"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:digits="0987654321+"
                        android:hint="@string/destination_number_text"
                        android:inputType="number|phone"
                        android:maxLength="18"
                        android:maxLines="1"
                        android:paddingTop="@dimen/padding_top_em"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/light_black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/textsize_em" />

                    <Button
                        android:id="@+id/tw_destination_con_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/contact_tw" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tw_destination_status_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top"
                    android:background="@drawable/ed_border_background"
                    android:padding="@dimen/two_way_padding"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/tw_destination_status_image"
                        android:layout_width="@dimen/tw_state_image_height"
                        android:layout_height="@dimen/tw_state_image_height"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/tw_status_connecting" />

                    <TextView
                        android:id="@+id/tw_destination_num_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_top"
                        android:layout_toRightOf="@id/tw_destination_status_image"
                        android:text="connecting"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tw_destination_time_elapsed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_top"
                        android:layout_toRightOf="@id/tw_destination_num_status"
                        android:text="connecting"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/two_way_price_view"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/new_btn_size"
                    android:layout_marginTop="@dimen/new_margin"
                    android:background="@drawable/boder_layout"
                    android:gravity="center_vertical|center_horizontal"
                    android:visibility="gone">

                    <TextView

                        android:id="@+id/tw_pricing_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="0.0"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/textsize_em" />

                    <TextView

                        android:id="@+id/tw_price_currecny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_bottom"
                        android:layout_toRightOf="@id/tw_pricing_rate"
                        android:gravity="center_vertical"
                        android:text="USD"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/textsize_em" />
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/two_way_call_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/new_btn_size"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/orange_button_selector_shape"
                    android:src="@drawable/call_white" />

                <ImageButton
                    android:id="@+id/two_way_endcall_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/new_btn_size"
                    android:layout_marginTop="@dimen/new_margin"
                    android:background="@drawable/red_button_selector_shape"
                    android:src="@drawable/call_down_big"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/top"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/search_row_text_size"

                        android:background="@drawable/border"

                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:text="@string/two_way_call_msg1"
                            android:textAlignment="center"
                            android:textColor="@color/light_grey" />


                        <TextView
                            android:id="@+id/noteTextView"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"

                            android:text="@string/two_way_call_msg2"
                            android:textAlignment="center"
                            android:textColor="@color/light_grey" />

                    </LinearLayout>

                    <!-- <ImageView
                         android:layout_width="@dimen/tw_con_button_width"
                         android:layout_height="@dimen/tw_con_button_height"
                         android:layout_gravity="top|center_horizontal"
                         android:background="@drawable/info"/>-->
                </FrameLayout>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <LinearLayout

        android:id="@+id/dialpad_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:visibility="gone">

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboardview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/keyboard_bg"
            android:keyBackground="@drawable/key_background"
            android:keyTextColor="#666666"
            android:keyTextSize="25dp"
            android:shadowColor="@android:color/transparent" />


    </LinearLayout>
</FrameLayout>