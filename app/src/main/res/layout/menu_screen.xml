<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"

        android:id="@+id/top_layout"
        android:paddingBottom="@dimen/padding_top_em"

        android:paddingLeft="@dimen/padding_left_em"
        android:paddingRight="@dimen/padding_right_em"
        android:paddingTop="@dimen/padding_right_em">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/menu_app_icon" />


        <Button
            android:id="@+id/user_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/border_layout_userbal"
            android:text=" Buy More "
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginTop="5dp"
            android:gravity="center"


            android:layout_centerVertical="true"

            android:textColor="@android:color/white"
            android:textSize="@dimen/abc_text_size_small_material" />

        <com.Utteru.commonUtilities.FontTextView
            android:singleLine="true"
            android:id="@+id/user_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_top_em"
            android:layout_toRightOf="@+id/imgView"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_toLeftOf="@+id/user_balance"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/abc_text_size_large_material" />
    </RelativeLayout>


    <GridView
        android:layout_below="@+id/top_layout"
        android:id="@+id/grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:stretchMode="columnWidth" />




</RelativeLayout>