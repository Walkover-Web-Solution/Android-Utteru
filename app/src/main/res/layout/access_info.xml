<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/blue_dark"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/new_margin"
        android:paddingLeft="@dimen/new_margin"
        android:paddingRight="@dimen/new_margin"
        android:paddingTop="@dimen/new_margin">

        <ImageView
            android:id="@+id/access_infor_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/change_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/access_infor_back"
            android:gravity="center_vertical"
            android:text="Access Number"
            android:textColor="@android:color/white"
            android:textSize="@dimen/abc_text_size_large_material" />

        <ImageView
            android:id="@+id/access_info_gotohome"
            android:layout_width="@dimen/menu_width"
            android:layout_height="@dimen/menu_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/menu"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/new_margin"
        android:orientation="vertical"

        android:padding="@dimen/margin_bottom">

        <include
            layout="@layout/error_message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <com.Utteru.commonUtilities.FontTextView

                android:id="@+id/access_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="123456"
                android:textColor="@color/new_black"
                android:textSize="@dimen/abc_text_size_large_material" />

            <com.Utteru.commonUtilities.FontTextView
                android:id="@+id/access_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/access_number"
                android:gravity="left"

                android:text="(country,state)"
                android:textColor="@color/new_gray"
                android:textSize="14dp" />

            <com.Utteru.ui.RoundedImageView
                android:id="@+id/call_access_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/call_access" />


        </RelativeLayout>


        <Button

            android:id="@+id/assigncontact"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/new_btn_size"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/new_margin"
            android:background="@drawable/contact_details_button_shape"
            android:gravity="center"
            android:text="Assign this to contact"

            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/unassign"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top"

            android:background="@drawable/red_button_selector_shape"
            android:gravity="center"
            android:padding="@dimen/margin_top"
            android:text="@string/unassign_access_number"
            android:textColor="@android:color/white"
            android:visibility="gone" />


        <com.baoyz.swipemenulistview.SwipeMenuListView
            android:id="@+id/access_info_listview"
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"

            android:background="@drawable/ed_inner_background"
            android:dividerHeight="1dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/access_info_listview"
        android:layout_margin="@dimen/new_margin"
        android:background="@color/whitish_gray"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <com.Utteru.commonUtilities.FontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="OR"
            android:textColor="@color/dark_gray"
            android:textSize="20dp" />

        <com.Utteru.commonUtilities.FontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:text="Choose another country's access number"
            android:textColor="@color/new_black" />

        <Button
            android:id="@+id/choose_another_country"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/new_btn_size"
            android:layout_marginTop="@dimen/new_margin"
            android:background="@drawable/auto_detect_country_button_2"
            android:text="CHOOSE"
            android:textColor="@android:color/white" />

    </LinearLayout>


</LinearLayout>
