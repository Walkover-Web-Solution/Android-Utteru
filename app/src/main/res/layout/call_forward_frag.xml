<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/grid_padding_all">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msg"
        android:layout_marginTop="@dimen/search_row_text_size"
        android:background="@drawable/callforwadmsg"
        android:orientation="vertical"
        android:padding="15dp">

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/msg_call_fwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="@string/call_fwd_msg"
            android:textAlignment="center"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/lsthead"
        android:layout_below="@+id/msg"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/numberhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:text="Rented Numbers"
            android:textColor="@color/red_reset_pin"
            android:textSize="@dimen/abc_text_size_body_1_material"
            android:textStyle="bold" />

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/expiryhead"
            android:layout_width="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/numberhead"
            android:text="Expires on"
            android:textColor="@color/red_reset_pin"
            android:textSize="@dimen/abc_text_size_body_1_material"
            android:textStyle="bold" />
    </RelativeLayout>

    <ListView
        android:id="@+id/alllong_codes"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/lsthead"
        android:layout_above="@+id/select_country_btn"
        android:choiceMode="singleChoice"
        android:divider="@color/divider_color"
        android:dividerHeight="1dp"
        android:padding="5dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/select_country_btn"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/new_btn_size"
        android:layout_marginTop="@dimen/new_margin"
        android:background="@drawable/red_button_selector_shape"
        android:text="@string/select_country"
        android:textColor="@android:color/white"
        android:textSize="@dimen/button_text_size" />
</RelativeLayout>