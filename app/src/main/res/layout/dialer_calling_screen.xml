<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/calling_icon"
        android:layout_weight=".6"
        android:background="@android:color/transparent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/caller" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/calling_icon"
        android:background="@color/white"
        android:id="@+id/user_info"
        android:layout_weight=".4">

        <com.Utteru.commonUtilities.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calle_name"

            android:text="Sneha"
            android:layout_marginTop="@dimen/new_margin"
            android:gravity="center_horizontal"
            android:textColor="@color/transparent_black"
            android:textSize="@dimen/abc_text_size_display_1_material" />

        <com.Utteru.commonUtilities.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/callee_number"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:text="+91 7828886664"
            android:textColor="@color/light_black"
            android:layout_below="@+id/calle_name"
             />

        <com.Utteru.commonUtilities.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/call_status"
            android:gravity="center_horizontal"
            android:text="Dialing..."
            android:textColor="@color/light_black"
            android:layout_below="@+id/callee_number"
            android:layout_margin="@dimen/new_margin"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:id="@+id/time_price"
            android:gravity="center"
            android:layout_below="@+id/call_status"
            android:layout_height="wrap_content">

            <Chronometer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:visibility="visible"
                android:padding="@dimen/new_margin"
                android:gravity="center_horizontal"
                android:id="@+id/time"
                android:textColor="@color/dark_black" />

            <ImageView
                android:visibility="gone"
                android:layout_width="1dp"
                android:layout_margin="2dp"
                android:id="@+id/call_price_divider"
                android:background="@color/new_gray"
                android:layout_height="fill_parent">
                /></ImageView>

            <com.Utteru.commonUtilities.FontTextView
                android:id="@+id/call_price"
                android:visibility="gone"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:textColor="@color/dark_black"
                android:layout_height="wrap_content"
                android:text="12 USD"/>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_price"
            android:layout_above="@+id/call_end"
            android:layout_marginTop="@dimen/new_margin">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/microphone"
                android:layout_marginLeft="70dp"
                android:background="@drawable/mute_inactive"
                android:layout_alignParentLeft="true" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/open_dialpad"
                android:visibility="gone"
                android:background="@drawable/ic_launcher"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="70dp"
                android:id="@+id/switch_speaker"
                android:layout_alignParentRight="true"
                android:background="@drawable/speaker_inactive"

                />
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="55dp"

            android:id="@id/call_end"
            android:layout_alignParentBottom="true"
            android:background="@color/dark_red">

            <ImageButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/endcall_btn"
                android:layout_centerInParent="true"
                android:background="@drawable/call_end" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>