<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/blue_dark"
        android:clickable="true"
        android:focusable="true"

        android:paddingLeft="@dimen/new_margin"
        android:paddingRight="@dimen/new_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"

            android:id="@+id/contacts_back"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/contacts_back"
            android:layout_height="wrap_content">

            <com.Utteru.commonUtilities.FontTextView
                android:id="@+id/contact_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Access Number"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/abc_text_size_large_material" />


            <com.Utteru.commonUtilities.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:visibility="gone"

                android:layout_marginLeft="5dp"
                android:id="@+id/contacts_subtitle"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/contacts_home"
            android:layout_width="@dimen/menu_width"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/menu_width"
            android:layout_alignParentRight="true"
            android:background="@drawable/menu" />
    </RelativeLayout>

    <include
        layout="@layout/error_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.Utteru.commonUtilities.FontTextView
        android:id="@+id/msg_call_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="@string/call_rates_text"
        android:textAlignment="center"
        android:padding="15dp"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/search_row_text_size"
        android:background="@drawable/border"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/new_margin"
        android:layout_marginRight="@dimen/new_margin"
        android:orientation="horizontal"
        android:padding="15dp">

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/user_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginRight="@dimen/new_margin"
            android:textAlignment="center"
            android:textColor="@color/blue_contacts"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="bold" />

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/user_call_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"

            android:textAlignment="center"
            android:textColor="@color/blue_contacts"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/search_row_text_size"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/new_margin"
        android:layout_marginRight="@dimen/new_margin"
        android:orientation="horizontal"
        android:padding="15dp">

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/intrested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="Intrested?"
            android:textAlignment="center"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_getplan"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="Get One"
            android:padding="5dp"
            android:layout_marginLeft="@dimen/new_margin"
            android:textAlignment="center"
            android:background="@color/blue_contacts"
            android:textColor="@color/white"
            android:textSize="@dimen/abc_text_size_medium_material" />


    </LinearLayout>

</LinearLayout>