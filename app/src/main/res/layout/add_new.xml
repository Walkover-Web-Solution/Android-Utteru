<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_new_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ed_border_background"
    android:orientation="vertical">

    <include
        layout="@layout/error_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_bottom"
        android:layout_marginRight="@dimen/margin_bottom"
        android:layout_marginTop="@dimen/margin_top"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/add_num_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/margin_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ed_inner_background"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_new_countrycodebtn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="8"
                android:background="@drawable/twc_edittext_boder"
                android:text="+91"
                android:textColor="@color/light_black" />

            <LinearLayout
                android:id="@+id/add_new_seperator"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/divider_color"

                android:orientation="horizontal"></LinearLayout>

            <EditText

                android:id="@+id/add_new_number"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@drawable/twc_edittext_boder"
                android:digits="0123456789"
                android:hint="@string/enter_new_number"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="@dimen/padding_left_em"
                android:paddingRight="@dimen/padding_left_em"
                android:textColor="@color/light_black"
                android:textColorHint="@color/light_black" />
        </LinearLayout>


        <Button
            android:id="@+id/add_new_number_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@color/blue"
            android:text="@string/add_new_data"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_email_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="vertical">


        <EditText
            android:id="@+id/add_new_email"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:layout_weight="2"
            android:background="@drawable/ed_inner_background"
            android:digits="@string/valid_input"
            android:hint="@string/enter_new_email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_left_em"
            android:paddingRight="@dimen/padding_left_em"
            android:textColor="@color/light_black"
            android:textColorHint="@color/light_black" />

        <Button
            android:id="@+id/add_new_email_button"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@color/blue"
            android:text="@string/add_new_data"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>