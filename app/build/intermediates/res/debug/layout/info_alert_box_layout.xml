<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ed_inner_background"
    android:orientation="vertical"
    android:padding="@dimen/grid_padding_all" >

    <com.Utteru.commonUtilities.FontTextView

        android:id="@+id/title_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:text="@string/promo_code_text"
        android:textColor="@color/new_black"
        android:textSize="@dimen/abc_text_size_large_material" />
    <com.Utteru.commonUtilities.FontTextView
         android:id="@+id/info_subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:text="@string/promo_code_text1"
        android:textColor="@color/new_black" />




  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/margin_top"
      android:gravity="center"
        android:orientation="horizontal" >


        <Button
             android:id="@+id/info_done_button"
             android:layout_width="wrap_content"

             android:layout_height="wrap_content"

             android:layout_marginLeft="5dp"
             android:background="@drawable/ed_inner_background"
             android:padding="@dimen/padding"
             android:text="OK"
             android:textColor="@color/new_black"
             android:textSize="20dp" />
    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Studio_Projects/utteru/app/src/main/res/layout/info_alert_box_layout.xml -->