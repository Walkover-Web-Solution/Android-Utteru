<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ed_inner_background"
    android:orientation="vertical"
    android:padding="@dimen/grid_padding_all" >

    <com.Utteru.commonUtilities.FontTextView

        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:id="@+id/title"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textColor="@color/new_black"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:text="@string/promo_code_text" />
    <com.Utteru.commonUtilities.FontTextView
         android:layout_marginTop="@dimen/margin_top"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:textColor="@color/new_black"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:text="@string/promo_code_text1"
         />
    <include
        android:layout_marginTop="@dimen/margin_top"
        layout="@layout/error_message_layout"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_width="wrap_content"/>

        <EditText


            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:background="@drawable/ed_border_background"
            android:layout_marginTop="@dimen/margin_top"
            android:id="@+id/promocode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:hint="@string/promocode_hint"
            android:textColor="@color/new_black" />

  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/margin_top"
        android:orientation="horizontal" >

        <Button
            android:layout_weight=".5"
            android:id="@+id/skip_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Skip "
            android:layout_marginRight="5dp"
            android:textSize="20dp"
            android:padding="2dp"
            android:background="@drawable/ed_inner_background"
            android:textColor="@color/new_black" />

        <Button
             android:padding="2dp"
             android:layout_marginLeft="5dp"
             android:textSize="20dp"
             android:layout_weight=".5"
             android:id="@+id/done_button"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/ed_inner_background"
             android:text="Done"
             android:textColor="@color/new_black" />
    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Studio_Projects/utteru/app/src/main/res/layout/alert_box_layout.xml -->