<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"


    android:background="@android:color/white"
    android:paddingLeft="@dimen/new_margin"
    android:layout_height="wrap_content">

    <ImageView
        android:padding="@dimen/margin_top_grid"

        android:id="@+id/transaction_icon"
        android:layout_alignParentLeft="true"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_gravity="center_vertical|center_horizontal"
        />


    <LinearLayout
        android:layout_marginLeft="@dimen/margin_top"
        android:layout_toRightOf="@id/transaction_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <com.Utteru.commonUtilities.FontTextView
        android:id="@+id/t_amount"
        android:layout_width="fill_parent"
        android:textColor="@color/new_black"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/abc_text_size_large_material"/>
    <com.Utteru.commonUtilities.FontTextView
        android:id="@+id/t_date"
        android:text="1232737374927"
        android:layout_marginTop="@dimen/margin_top_grid"
        android:layout_width="fill_parent"
        android:textColor="@color/dark_gray"
        android:layout_height="wrap_content" />
    <com.Utteru.commonUtilities.FontTextView
        android:id="@+id/t_balance"
        android:text="Balance :"
        android:layout_marginTop="@dimen/margin_top_grid"
        android:textColor="@color/dark_gray"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:padding="@dimen/margin_top_grid"
        android:id="@+id/trans_details_icon"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/margin_top"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/ar_right"/>
</RelativeLayout>
