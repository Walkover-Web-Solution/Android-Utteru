<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_left_em"
    android:paddingRight="@dimen/padding_left_em" >

    <include layout="@layout/error_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <EditText

        android:id="@+id/profile_name"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:hint="@string/missing_name"
        android:padding="2dp"
        />



    <com.Utteru.commonUtilities.FontTextView
        android:id="@+id/gender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingBottom="@dimen/padding_top_em"
        android:paddingTop="@dimen/padding_top_em"
        android:text="@string/gender_text"
        android:textColor="@color/new_black"
         />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/gender_status"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:text="MALE"
            android:textSize="@dimen/textsize_em" />
        <Button
            android:id="@+id/gender_switch"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_top_grid"
            android:background="@drawable/off"
            android:checked="false"
            android:textColor="@android:color/white" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/stroke_width"
        android:layout_margin="@dimen/margin_top"
        android:background="@color/whitish_gray" >
    </LinearLayout>

    <com.Utteru.commonUtilities.FontTextView
        android:id="@+id/listen_voice_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingBottom="@dimen/padding_top_em"
        android:paddingTop="@dimen/padding_top_em"
        android:text="@string/listen_text"

        android:textColor="@color/new_black"
      />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/listen_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:text="Off"
            android:textSize="@dimen/textsize_em" />


        <Button
            android:id="@+id/switch_listner"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_top_grid"
            android:background="@drawable/off"
            android:checked="false"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/stroke_width"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/whitish_gray" >
    </LinearLayout>

    <Button
        android:id="@+id/update_profile"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@drawable/blue_button_selector_shape"
        android:text="Update"
        android:textColor="@android:color/white"/>





</LinearLayout><!-- From: file:/C:/Studio_Projects/utteru/app/src/main/res/layout/my_profile.xml -->