<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/twc_orange"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/padding_bottom_em"
        android:paddingLeft="@dimen/padding_left_em"
        android:paddingRight="@dimen/padding_right_em"
        android:paddingTop="@dimen/padding_right_em">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/auto_detect_country_back"
            android:src="@drawable/back"
            android:layout_height="wrap_content" />

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/auto_detect_coutry_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/auto_detect_country_back"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/two_way_call"
            android:textColor="@android:color/white"
            android:textSize="@dimen/abc_text_size_large_material" />

        <ImageView
            android:id="@+id/auto_detect_country_home"
            android:layout_width="@dimen/menu_width"
            android:layout_centerVertical="true"
android:layout_marginRight="5dp"
            android:visibility="gone"
            android:layout_height="@dimen/menu_width"
            android:layout_alignParentRight="true"
            android:background="@drawable/menu" />
    </RelativeLayout>
    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/tw_indicator"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_height="wrap_content"
        app:fillColor="@color/twc_orange"
        app:radius="4dp"

        />

    <android.support.v4.view.ViewPager
        android:id="@+id/tw_pager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>
