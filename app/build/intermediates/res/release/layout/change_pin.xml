<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  >

    <RelativeLayout
        android:id="@+id/change_pin_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_all"
            android:paddingLeft="@dimen/new_margin"
            android:paddingRight="@dimen/new_margin"
            android:paddingTop="@dimen/new_margin">

            <include
                layout="@layout/error_message_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/cp_new_pin_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/new_btn_size"
                android:layout_marginTop="@dimen/new_margin"
                android:background="@drawable/curve_corner_shape_edittext">

                <EditText
                    android:id="@+id/cp_new_pin_code"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_reset_pin"
                    android:digits="0123456789"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:hint="New PIN"
                    android:inputType="number|phone"
                    android:maxLength="4"
                    android:paddingLeft="@dimen/new_margin"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/edit_text_size" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/cp_confirm_pin_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/new_btn_size"
                android:layout_marginTop="@dimen/new_margin"
                android:background="@drawable/curve_corner_shape_edittext">

                <EditText
                    android:id="@+id/cp_confirm_pin_code"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_reset_pin"
                    android:digits="0123456789"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:hint="Confirm PIN"
                    android:inputType="number|phone"
                    android:maxLength="4"
                    android:paddingLeft="@dimen/new_margin"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/edit_text_size" />


            </LinearLayout>

            <Button
                android:id="@+id/reset_pin"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/new_btn_size"
                android:layout_marginTop="@dimen/new_margin"
                android:background="@drawable/red_button_selector_shape"
                android:text="@string/reset_password_btn_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size" />

            <com.Utteru.commonUtilities.FontTextView
                android:id="@+id/cp_last_update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/new_margin"
                android:padding="@dimen/error_box_padding"
                android:text="@string/last_updated"
                android:textColor="@color/dark_black" />
        </LinearLayout>



    </RelativeLayout>
    <LinearLayout

        android:id="@+id/dialpad_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:orientation="vertical"
       >

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboardview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/keyboard_bg"
            android:keyBackground="@drawable/key_background"
            android:keyTextColor="#666666"
            android:keyTextSize="25dp"
            android:shadowColor="@android:color/transparent" />


    </LinearLayout>
</FrameLayout><!-- From: file:/C:/Studio_Projects/utteru/app/src/main/res/layout/change_pin.xml -->