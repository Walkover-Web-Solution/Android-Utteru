
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:paddingBottom="@dimen/padding_bottom_em"
            android:paddingLeft="@dimen/new_margin"
            android:paddingRight="@dimen/padding_right_em"
            android:background="@color/dialer_green"
            android:paddingTop="@dimen/padding_right_em"
            android:id="@+id/header">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back_button"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/back"/>

            <com.Utteru.commonUtilities.FontTextView
                android:id="@+id/dialer_con_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             android:layout_toRightOf="@id/back_button"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="@string/recent_calls"
                android:textColor="@android:color/white"
                android:textSize="@dimen/abc_text_size_large_material" />

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/menu" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
           android:background="@color/white"
            android:padding="5dp"
            android:id="@+id/footer">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/call_current_number"
                android:layout_alignParentLeft="true"
                android:background="@drawable/call_number"
                android:layout_centerVertical="true"
               android:layout_marginLeft="80dp" />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/open_profile"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/profile_log"
                android:layout_marginRight="80dp" />
        </RelativeLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/footer"
    android:layout_below="@+id/header">

    <com.Utteru.commonUtilities.FontTextView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/whitish_gray"
        android:id="@+id/nothing_found"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:text="No call history found!"
        android:textColor="@color/new_black"/>

        <ListView
            android:id="@+id/dialer_detail_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:choiceMode="singleChoice"
            android:divider="@color/divider_color"
            android:dividerHeight="1dp"
           ></ListView>
</FrameLayout>

    </RelativeLayout>
