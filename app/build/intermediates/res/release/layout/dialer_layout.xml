<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/sip_online_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:id="@+id/frame_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/header_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/dialer_green"
                android:clickable="true"

                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/new_margin">


                    <com.Utteru.commonUtilities.FontTextView

                        android:id="@+id/country_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/new_margin"
                        android:background="@drawable/country_code_button_selector"
                        android:text="india"
                        android:textColor="@android:color/white" />

                    <com.Utteru.commonUtilities.FontTextView
                        android:id="@+id/down_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/country_name"
                        android:background="@drawable/ar_down_small" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/new_margin"
                    android:layout_marginRight="@dimen/new_margin">

                    <Button
                        android:id="@+id/select_country"
                        android:layout_width="@dimen/country_code_button_width"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/country_code_button_selector"
                        android:gravity="left|center_vertical"
                        android:text="+91"
                        android:textColor="@color/country_code_black"
                        android:textSize="@dimen/abc_text_size_large_material"
                        android:visibility="visible" />


                    <EditText
                        android:id="@+id/callee"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/clear_text"

                        android:layout_toRightOf="@id/select_country"
                        android:background="@color/dialer_green"
                        android:focusable="true"
                        android:gravity="left|center"
                        android:maxLength="18"
                        android:padding="4dp"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/abc_text_size_large_material"></EditText>

                    <ImageButton

                        android:id="@id/clear_text"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/call_back"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout

                android:id="@+id/header_menu"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:background="@color/dialer_green"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="@dimen/padding_bottom_em"
                android:paddingLeft="@dimen/padding_left_em"
                android:paddingRight="@dimen/padding_right_em"
                android:paddingTop="@dimen/padding_right_em"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/auto_detect_country_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back" />

                <com.Utteru.commonUtilities.FontTextView
                    android:id="@+id/auto_detect_coutry_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/auto_detect_country_back"
                    android:gravity="center_vertical"
                    android:text="Recent Calls"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/abc_text_size_large_material" />

                <ImageView
                    android:id="@+id/auto_detect_country_home"
                    android:layout_width="@dimen/menu_width"
                    android:layout_height="@dimen/menu_width"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/menu" />
            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/footer_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:background="@color/keyboard_bg"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/hide_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/dialpad_dwn"
                android:visibility="gone" />

            <ImageButton

                android:id="@+id/show_dial_pad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/dialpad_upw" />

            <ImageButton
                android:id="@+id/goto_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/contact_book" />


        </RelativeLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/footer_layout"
            android:layout_below="@+id/frame_header">

            <com.Utteru.commonUtilities.FontTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_top_em"
                android:drawableLeft="@android:drawable/ic_dialog_alert"
                android:drawablePadding="@dimen/padding_top_em"
                android:gravity="center"
                android:padding="@dimen/padding_right_em"
                android:id="@+id/no_logs_found"
                android:text="No call history found "
                android:textColor="@color/new_black"
                android:textSize="@dimen/abc_text_size_medium_material" />


            <ListView
                android:id="@+id/call_logs_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="visible"
                android:background="@android:color/white"
                android:dividerHeight="1dp"
                android:focusable="false">

            </ListView>


            <LinearLayout

                android:id="@+id/dialpad_layout"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:visibility="gone">


                <android.inputmethodservice.KeyboardView
                    android:id="@+id/keyboardview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/keyboard_bg"
                    android:keyBackground="@drawable/key_background"
                    android:keyTextColor="#666666"
                    android:keyTextSize="25dp"
                    android:shadowColor="#ffffff" />


            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sip_error_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent_black"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:visibility="gone">

        <com.Utteru.commonUtilities.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_dialog_alert"
            android:drawablePadding="@dimen/padding"
            android:text="You are not registered !! Please check internet connectivity. "
            android:textColor="@android:color/white"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/error_detail_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_dialog_alert"
            android:drawablePadding="@dimen/padding"
            android:text="Error Details : "
            android:textColor="@android:color/white"
            android:textSize="@dimen/abc_text_size_small_material"
            android:visibility="gone" />

    </LinearLayout>
</FrameLayout>


