<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/blue_dark"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/new_margin"
        android:paddingLeft="@dimen/new_margin"
        android:paddingRight="@dimen/new_margin"
        android:paddingTop="@dimen/new_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/auto_detect_country_back"
            android:src="@drawable/back"
            android:layout_height="wrap_content" />

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/auto_detect_coutry_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/auto_detect_country_back"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="My Account "
            android:textColor="@android:color/white"
            android:textSize="@dimen/abc_text_size_large_material" />

        <ImageView
            android:id="@+id/auto_detect_country_home"
            android:layout_width="@dimen/menu_width"
            android:layout_centerVertical="true"
android:visibility="gone"
            android:layout_height="@dimen/menu_width"
            android:layout_alignParentRight="true"
            android:background="@drawable/menu" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/new_margin" >

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/my_numbers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/new_margin"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_top_em"
            android:paddingTop="@dimen/new_margin"
            android:text="@string/my_num"
            android:textColor="@color/new_black"
            android:textSize="@dimen/textsize_em" />
        <LinearLayout
            android:layout_width="fill_parent"

            android:layout_height="@dimen/stroke_width"
            android:background="@color/whitish_gray" >
        </LinearLayout>

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/my_emails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/new_margin"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/new_margin"
            android:paddingTop="@dimen/padding_top_em"
            android:text="@string/my_emails"
            android:textColor="@color/new_black"
            android:textSize="@dimen/textsize_em" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/stroke_width"
            android:background="@color/whitish_gray" >
        </LinearLayout>

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/my_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/new_margin"
            android:paddingTop="@dimen/padding_top_em"
            android:text="@string/my_profile"
            android:textColor="@color/new_black"
            android:textSize="@dimen/textsize_em" />




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/stroke_width"
            android:background="@color/whitish_gray" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Studio_Projects/utteru/app/src/main/res/layout/settings_layout.xml -->