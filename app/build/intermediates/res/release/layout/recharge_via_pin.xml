<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recharge_by_pin_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/twc_orange"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/new_margin"
        android:paddingLeft="@dimen/new_margin"
        android:paddingRight="@dimen/new_margin"
        android:paddingTop="@dimen/new_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/auto_detect_country_back"
            android:src="@drawable/back"

            android:layout_height="wrap_content" />

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/auto_detect_coutry_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/auto_detect_country_back"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="Recharge by PIN"
            android:textColor="@android:color/white"
            android:textSize="@dimen/abc_text_size_large_material" />

        <ImageView
            android:id="@+id/auto_detect_country_home"
            android:layout_width="@dimen/menu_width"
            android:layout_centerVertical="true"
            android:visibility="gone"
android:layout_marginRight="5dp"
            android:layout_height="@dimen/menu_width"
            android:layout_alignParentRight="true"
            android:background="@drawable/menu" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_all"
        android:paddingBottom="@dimen/padding_bottom_em"
        android:paddingLeft="@dimen/padding_left_em"
        android:paddingRight="@dimen/padding_right_em"
        android:paddingTop="@dimen/padding_right_em">

        <include
            layout="@layout/error_message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/recharge_pin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/new_margin"
            android:gravity="center_vertical"
            android:text="@string/recharge_pin_text"
            android:textColor="@color/new_black" />

        <EditText
            android:id="@+id/recharge_pin_pin"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/new_margin"
            android:background="@drawable/ed_inner_background"
            android:digits="0123456789"
            android:hint="**************"
            android:inputType="number|phone"
            android:maxLength="14"
            android:maxLines="1"
            android:paddingLeft="@dimen/edit_padding_left"
            android:paddingRight="@dimen/edit_padding_left"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/edit_text_size" />

        <Button
            android:id="@+id/recharge_pin_button"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/new_margin"
            android:background="@drawable/orange_rechargeby_pin"
            android:text="@string/recharge_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Studio_Projects/utteru/app/src/main/res/layout/recharge_via_pin.xml -->