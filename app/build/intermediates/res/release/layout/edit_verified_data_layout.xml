<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentTop="true"
        android:background="@color/yellow"
        android:paddingBottom="@dimen/padding_bottom_em"
        android:paddingLeft="@dimen/padding_left_em"
        android:paddingRight="@dimen/padding_right_em"
        android:paddingTop="@dimen/padding_right_em" >

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/edit_data_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="@string/edit_data"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <com.Utteru.commonUtilities.FontTextView
        android:id="@+id/mn_data_to_be_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_top"
        android:text="1234567890"
        android:textColor="@color/new_black"
        android:textSize="@dimen/textsize_em" />

    <include
        layout="@layout/error_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_bottom"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/mn_verify_number_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_top"
        android:orientation="vertical"
        android:visibility="visible" >

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/verify_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ed_message"
            android:textColor="@color/new_black" />

        <LinearLayout
            android:id="@+id/vc_code_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/edit_box_height"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/edit_numebr_curve_corner_shape_layout" >

            <EditText
                android:id="@+id/mn_code1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/curve_corner_shape_edittext"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="X"
                android:inputType="number|phone"

                android:textCursorDrawable="@null"
                android:textSize="@dimen/edit_text_size" />

            <LinearLayout
                android:layout_width="@dimen/partition_line_width"
                android:layout_height="fill_parent"
                android:background="@color/new_black" >
            </LinearLayout>

            <EditText
                android:id="@+id/mn_code2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/curve_corner_shape_edittext"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="X"
                android:inputType="number|phone"
                android:maxLength="1"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/edit_text_size" />

            <LinearLayout
                android:layout_width="@dimen/partition_line_width"
                android:layout_height="fill_parent"
                android:background="@color/new_black" >
            </LinearLayout>

            <EditText
                android:id="@+id/mn_code3"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/curve_corner_shape_edittext"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="X"
                android:inputType="number|phone"
                android:maxLength="1"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/edit_text_size" />

            <LinearLayout
                android:layout_width="@dimen/partition_line_width"
                android:layout_height="fill_parent"
                android:background="@color/new_black" >
            </LinearLayout>

            <EditText
                android:id="@+id/mn_code4"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/curve_corner_shape_edittext"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="X"
                android:inputType="number|phone"
                android:maxLength="1"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/edit_text_size" />
        </LinearLayout>




        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding"
            android:paddingTop="@dimen/padding">
            <com.Utteru.commonUtilities.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="right"
                android:padding="1dp"
                android:text="Resend Code via "
                android:textColor="@color/new_black"
                android:textSize="@dimen/textsize_em" />

            <com.Utteru.commonUtilities.FontTextView
                android:id="@+id/mn_resend_button_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="left"
                android:padding="1dp"
                android:text="SMS"
                android:textColor="@color/new_black"
                android:textSize="@dimen/textsize_em" />


            <com.Utteru.commonUtilities.FontTextView
                android:id="@+id/text_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="right"
                android:padding="1dp"
                android:text=" Or "
                android:textColor="@color/new_black"
                android:textSize="@dimen/textsize_em" />

            <com.Utteru.commonUtilities.FontTextView
                android:id="@+id/mn_resend_call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:padding="1dp"
                android:text="Call"
                android:textColor="@color/new_black"
                android:textSize="@dimen/textsize_em" />

            <com.Utteru.commonUtilities.FontTextView
                android:id="@+id/mn_resend_email_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:padding="1dp"
                android:text="Email"
                android:textColor="@color/new_black"
                android:textSize="@dimen/textsize_em" />

        </LinearLayout>

        <Button
            android:id="@+id/mn_verifycode_button"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/yellow_button_selector_shape"
            android:text="@string/verify_text"
            android:textColor="@android:color/white"
           />
    </LinearLayout>

    <Button
        android:id="@+id/make_number_default"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/margin_bottom"
        android:background="@drawable/yellow_button_selector_shape"
        android:text="@string/make_default"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/delete_number"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/margin_bottom"
        android:background="@drawable/yellow_button_selector_shape"
        android:text="@string/delete"
        android:textColor="@android:color/white" />

</LinearLayout><!-- From: file:/C:/Studio_Projects/utteru/app/src/main/res/layout/edit_verified_data_layout.xml -->