<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    />

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/blue_dark"
        android:clickable="true"
        android:focusable="true"
       android:padding="@dimen/new_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/auto_detect_country_back"
            android:src="@drawable/back"
            android:layout_height="wrap_content" />

        <com.Utteru.commonUtilities.FontTextView
            android:id="@+id/auto_detect_coutry_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/auto_detect_country_back"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="Buy Now"
            android:textColor="@android:color/white"
            android:textSize="@dimen/abc_text_size_large_material" />

        <ImageView
            android:id="@+id/auto_detect_country_home"
            android:layout_width="@dimen/menu_width"
            android:layout_centerVertical="true"

            android:layout_height="@dimen/menu_width"
            android:layout_alignParentRight="true"
            android:background="@drawable/menu" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/new_margin">

        <include
            layout="@layout/error_message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.Utteru.commonUtilities.FontTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

           android:textColor="@color/new_black"
            android:text="Select an option: "
            android:textSize="@dimen/textsize_em" />

        <SeekBar

            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/new_margin"
            android:background="@drawable/buy_now_border">

            <com.Utteru.commonUtilities.FontTextView
                android:id="@+id/bal_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="@dimen/margin_top"
                android:paddingTop="@dimen/margin_top"
                android:layout_marginLeft="10dp"
                android:textColor="@color/blue_earn_credit"
                android:text="780"
                android:textSize="@dimen/abc_text_size_large_material" />

            <com.Utteru.commonUtilities.FontTextView
                android:id="@+id/bal_currecny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_top"
                android:layout_marginLeft="5dp"
                android:textColor="@color/blue_earn_credit"
                android:layout_toRightOf="@+id/bal_amount"

                android:layout_marginRight="10dp"
                android:paddingTop="@dimen/margin_top"
                android:text="INR"
                android:textSize="@dimen/abc_text_size_large_material" />
        </RelativeLayout>
<RelativeLayout
    android:layout_marginTop="@dimen/new_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/new_margin"
    android:background="@color/pop_up_referral">

        <Button
            android:id="@+id/buy_now_button_stripe"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/new_btn_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/contact_details_button_shape"
            android:gravity="center"
            android:text="Proceed"
            android:textColor="@color/white" />


        <Button

            android:id="@+id/buy_now_button_paypal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/new_btn_size"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/buy_now_button_stripe"
            android:layout_marginTop="@dimen/new_margin"
            android:background="@drawable/ed_inner_background"
            android:text="Proceed"
            android:textColor="@color/blue"
            android:layout_marginBottom="10dp"/>

</RelativeLayout>
    </LinearLayout>


</LinearLayout>

